@model List<kutuphane_otomasyou.Models.table.kitaplar.Kitap>
@using kutuphane_otomasyou.Models.table.kitaplar

@{
    ViewBag.Title = "kitapDetaylari";
}

<!DOCTYPE html>
<html>
<head>
    <title>Kitap Detayı</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
   
   
    <div class="container">
        <h1 class="mt-4">Kitap Detayı</h1>
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">

                        <h5 class="card-title">@TempData["kitap_adi"]</h5>
                        <p class="card-text">Yazar: @TempData["yazar"]</p>
                        <p class="card-text">Türü: @TempData["turu"]</p>
                        <p class="card-text">Özet: @TempData["ozet"]</p>
                        <div>
                            <p><strong>Yıl:</strong> @TempData["yili"]</p>
                            <p><strong>Sayfa Sayısı:</strong> @TempData["sayfa_sayisi"]</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <img src="@TempData["resimi"]" class="img-fluid" alt="Kitap Resmi">
            </div>
        </div>
    </div>
    
</body>
</html>

